# Environment Configuration
NODE_ENV=development

# Database
DB_PATH=./data/posplus.db

# Application
APP_NAME=POSPlus
APP_VERSION=1.0.0

# Security
SESSION_TIMEOUT=3600000
AUTO_LOCK_TIMEOUT=300000

# Printer Configuration
PRINTER_TYPE=usb
PRINTER_VENDOR_ID=
PRINTER_PRODUCT_ID=

# Auto-Update
AUTO_UPDATE_URL=https://updates.posplus.com
CHECK_UPDATE_ON_START=true

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Cloud Sync (Future)
SYNC_ENABLED=false
SYNC_API_URL=
SYNC_API_KEY=
