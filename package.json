{
  "name": "posplus",
  "version": "1.0.0",
  "description": "Point of Sale System - Modern POS application built with Electron, React, TypeScript and SQLite",
  "main": "dist/main/index.js",
  "author": "POSPlus Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js",
    "dev:main": "webpack --config webpack.main.config.js --watch",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "build:main": "webpack --config webpack.main.config.js --mode production",
    "start": "electron .",
    "package": "npm run build && electron-builder build --win",
    "package:dir": "npm run build && electron-builder build --win --dir",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "migrate": "node scripts/migrate.js",
    "db:reset": "node scripts/reset-db.js"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "better-sqlite3": "^9.2.2",
    "bcrypt": "^5.1.1",
    "uuid": "^9.0.1",
    "date-fns": "^3.0.0",
    "zod": "^3.22.4",
    "electron-updater": "^6.1.7",
    "escpos": "^3.0.0-alpha.6",
    "usb": "^2.11.0",
    "node-hid": "^2.2.0",
    "winston": "^3.11.0",
    "pdfmake": "^0.2.9",
    "xlsx": "^0.18.5",
    "recharts": "^2.10.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/better-sqlite3": "^7.6.8",
    "@types/bcrypt": "^5.0.2",
    "@types/uuid": "^9.0.7",
    "@types/node": "^20.10.5",
    "@types/node-hid": "^1.3.4",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "html-webpack-plugin": "^5.6.0",
    "ts-loader": "^9.5.1",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "concurrently": "^8.2.2",
    "electron-devtools-installer": "^3.2.0"
  },
  "build": {
    "appId": "com.posplus.app",
    "productName": "POSPlus",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico"
    },
    "publish": {
      "provider": "generic",
      "url": "https://updates.posplus.com"
    }
  }
}
